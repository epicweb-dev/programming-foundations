{
	"compilerOptions": {
		"moduleDetection": "force",
		"target": "ES2022",
		"module": "ESNext",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["**/*.ts", "**/*.tsx", "playground/**/*.ts"],
	"exclude": ["node_modules", "**/node_modules"]
}
